{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Wireframe DSL",
  "type": "object",
  "required": [
    "page_title",
    "sections"
  ],
  "properties": {
    "page_title": {
      "type": "string",
      "minLength": 1
    },
    "brand": {
      "type": "object",
      "properties": {
        "primary_color": {
          "type": "string",
          "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$"
        },
        "tone": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "intent",
          "uikit",
          "components"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "intent": {
            "type": "string"
          },
          "uikit": {
            "type": "object",
            "properties": {
              "style": {
                "type": "string"
              },
              "padding": {
                "type": "string"
              },
              "header_transparent": {
                "type": "boolean"
              }
            },
            "additionalProperties": true
          },
          "components": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "copy_hint": {
                  "type": "string"
                },
                "variants": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "image_keywords": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "placement": {
                  "type": "string"
                },
                "items": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}